<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoandroid"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imagenLogin"
        android:layout_width="wrap_content"
        android:layout_height="198dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="328dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/gente" />
    <EditText
        android:id="@+id/editUsuarioSesion"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="309dp"
        android:background="@drawable/bordertextview"
        android:contextClickable="false"
        android:ems="10"
        android:gravity="center"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editContrase単aSesion"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="223dp"
        android:background="@drawable/bordertextview"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword"
        android:gravity="center"
        android:textStyle="bold"
        tools:visibility="visible"        />
    <Button
        android:id="@+id/btnInciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="135dp"
        android:text="Iniciar Sesion"
        app:cornerRadius="100dp" />
    <Button
        android:id="@+id/btnRegistrarUsuario"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="179dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="96dp"
        android:text="Registro"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:cornerRadius="100dp"/>
    <Button
        android:id="@+id/btnContrase単aRecuUsuario"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="98dp"
        android:text="Contrase単a"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:cornerRadius="100dp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="112dp"
        android:text="|"
        android:textColor="@color/white"
        android:textSize="12dp" />
</RelativeLayout>