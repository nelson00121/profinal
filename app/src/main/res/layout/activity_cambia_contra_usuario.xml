<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fp"
    tools:context=".CambiaContraUsuario">


    <TextView
        android:id="@+id/txtBienUsuario"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="536dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Cambio de contraseña de Usuario"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtNuevaContraUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="441dp"
        android:ems="10"
        android:hint="Nueva Contraseña"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtRepiteContraUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="360dp"
        android:ems="10"
        android:hint="Nueva Contraseña"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnGuardarNuevaContra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="270dp"
        android:text="Guarda Cambios" />
</RelativeLayout>